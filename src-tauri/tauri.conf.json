{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JSLive",
  "version": "0.1.0",
  "identifier": "io.monawwar.jslive",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "backgroundColor": "#282a36"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
